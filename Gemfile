source 'https://rubygems.org'

# Jekyll core
gem 'jekyll', '~> 4.3.2'

# Theme
gem 'minima', '~> 2.5'

# Plugins esenciales
gem 'jekyll-feed', '~> 0.17'
gem 'jekyll-seo-tag', '~> 2.8'
gem 'jekyll-sitemap', '~> 1.4'

# Dependencias de seguridad
gem 'csv'
gem 'logger'
gem 'base64'

# Herramientas de desarrollo (solo en desarrollo)
group :development do
  gem 'jekyll-admin', '~> 0.11.1'  # Solo en desarrollo local
end

# Gemas para testing (opcional)
group :test do
  gem 'html-proofer', '~> 5.0'  # Verificar enlaces y HTML
end
